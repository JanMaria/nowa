{% extends 'base.html.twig' %}

{% block title %}New Article{% endblock %}

{% block body %}
  {{ form_label(form.title, 'Article Title:') }}
  {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
  {{ form_errors(form.title) }}

  {{ form_label(form.author, 'Article Author:') }}
  {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
  {{ form_errors(form.author) }}

  {{ form_label(form.createdAt, 'Created At:') }}
  {{ form_widget(form.createdAt, {'attr': {'class': 'form-group'}})}}
  {{ form_errors(form.createdAt) }}

  {{ form_label(form.isPublished, 'Is Published:') }}
  {{ form_widget(form.isPublished, {'attr': {'class': 'form-check'}}) }}

  {{ form_label(form.body, 'Article Body:') }}
  {{ form_widget(form.body, {'attr': {'class': "form-control h-200"}}) }}
  {{ form_errors(form.body) }}

  {{ form_label(form.add, 'Save Article') }}
  {{ form_widget(form.add, {'attr': {'class': "btn btn-primary"}}) }}

  {{ form_row(form._token) }}

{% endblock %}
